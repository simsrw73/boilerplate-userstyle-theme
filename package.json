{
  "name": "boilerplate-userstyle-theme",
  "version": "0.1.0",
  "description": "Boilerplate for creating user styles for website themes",
  "author": "Randy W. Sims <simsrw73@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/simsrw73/boilerplate-userstyle-theme#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simsrw73/boilerplate-userstyle-theme.git"
  },
  "bugs": {
    "url": "https://github.com/simsrw73/boilerplate-userstyle-theme/issues"
  },
  "browserslist": [
    "> 1%",
    "last 3 versions",
    "not dead"
  ],
  "config": {
    "build": "dev"
  },
  "scripts": {
    "prebuild": "mkdirp debug release",
    "build": "cross-var npm-run-all build:$npm_package_config_build:*",
      "build:dev:scss": "cross-var node-sass-chokidar --source-map-contents sass/theme.scss > debug/theme.user.css",
      "build:dev:postcss": "cross-var postcss debug/theme.user.css --use autoprefixer --replace",
      "build:release:scss": "cross-var node-sass-chokidar --output-style compact sass/theme.scss > release/theme.user.css",
      "build:release:postcss": "cross-var postcss release/theme.user.css --use autoprefixer --replace --no-map",
    "watch": "npm-run-all --parallel watch:*",
      "watch:scss": "chokidar --verbose \"sass/**/*.scss\" -c \"npm run build\"",
    "lint": "stylelint \"sass/**/*.scss\"",
    "release": "npm-run-all release:*",
      "release:userstyle": "cross-var npm run build --$npm_package_name:build=release",
      "release:userjs": "echo Don't know how to do this yet.",
    "clean": "rimraf debug release"
  },
  "devDependencies": {
    "autoprefixer": "^9.0.0",
    "chokidar-cli": "^1.2.0",
    "cross-var": "^1.1.0",
    "mkdirp": "^0.5.1",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "stylelint": "^9.3.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.1.3"
  }
}
